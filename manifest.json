{
  "manifest_version": 3,
  "name": "Hotstar Ad Controller",
  "version": "1.0",
  "description": "Control or mute Hotstar ads",
  "permissions": [
    "webRequest",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.hotstar.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "48.png",
    "128": "128.png"
  }
}